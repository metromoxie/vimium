{
  "manifest_version": 2,
  "name": "Vimium Lite",
  "version": "1.42",
  "description": "Link hints, based on Vimium.",
  "icons": {  "16": "icons/icon16.png",
              "48": "icons/icon48.png",
             "128": "icons/icon128.png" },
  "background": {
    "scripts": [
      "lib/utils.js",
      "background_scripts/commands.js",
      "lib/clipboard.js",
      "background_scripts/settings.js",
      "background_scripts/main.js"
    ]
  },
  "options_page": "pages/options.html",
  "permissions": [
    "clipboardRead",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/browser_action_disabled.png"
  },
  "commands": {
    "activate-link-hints": {
      "suggested_key": {
        "default": "Ctrl+Period"
      },
     "description": "Activate link hints"
    },
    "activate-link-hints-new-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Period"
      },
     "description": "Activate link hints to open in new tab"
    }
  }
}
